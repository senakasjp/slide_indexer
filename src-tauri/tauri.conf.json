{
  "package": {
    "productName": "Slides Indexer",
    "version": "0.4.3"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.example.slidesindexer",
      "targets": [
        "app",
        "dmg"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Slides Indexer",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  }
}
